{
  extends: [
    "config:recommended",
    "group:all",
    "schedule:weekly",
    ":widenPeerDependencies",
  ],
  enabledManagers: ["npm", "github-actions"],
  packageRules: [
    {
      matchUpdateTypes: ["patch"],
      enabled: false,
    },
    {
      matchManagers: ["npm"],
      automerge: true,
      minimumReleaseAge: "2 days",
    },
    {
      automerge: true,
      matchPackageNames: ["/github-actions/"],
    },
  ],
  timezone: "Europe/Helsinki",
  dependencyDashboard: true,
}
